<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="4dp"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="4dp"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="80dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="5dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/LcircularimageId"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar"
        app:civ_border_color="#9c27b0"
        app:civ_border_width="1dp"

        />
    <LinearLayout
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/LcircularimageId"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="3dp"
            android:id="@+id/LtextviewID"
            android:textSize="20sp"
            android:text="shain miah "
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            android:padding="3dp"
            android:text="sdf f fghjkfghjh fghjk fghjk fghjk gh"
            android:id="@+id/LtextviewID1"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"

            />

    </LinearLayout>


</RelativeLayout>


</androidx.cardview.widget.CardView>